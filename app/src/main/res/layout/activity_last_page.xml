<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:backgroundTint="#504F4F"
    android:layout_height="match_parent"
    tools:context=".LastPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/light_green"
        android:layout_height="225dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="72dp">

            <ImageView
                android:src="@drawable/baseline_menu_24"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:foregroundGravity="left"

                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <ImageView
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight=".5"
                android:foregroundGravity="left"

                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <ImageView
                android:src="@drawable/top"
                android:layout_marginTop="8dp"
                android:layout_weight="12"
                android:scaleType="centerCrop"
                android:layout_marginStart="8dp"
                android:layout_width="7dp"
                android:layout_height="75dp"/>
            <ImageView
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight=".5"
                android:foregroundGravity="left"

                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <ImageView
                android:src="@drawable/baseline_notifications_none_24"
                android:layout_marginTop="9dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>


        </LinearLayout>






        <!--        ...cardview-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/white"


            android:layout_marginTop="5dp"
            android:layout_marginEnd="7dp"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="0dp"

            android:padding="0dp"

            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp">

            <!--        ...linearlayout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="0dp"

                android:orientation="vertical">

                <!--...textview-->
                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="2dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"

                    android:padding="0dp"
                    android:layout_gravity="center"

                    android:text="time"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textAlignment="center"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="6dp"

                    android:padding="0dp"

                    android:text="We receive your job request You will receive confirmation job selection notification here in application until you receive please wait..."
                    android:textColor="@color/gray"
                    android:textSize="15sp"
                    android:textAlignment="center"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>




        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="You will Get Confirmation Email in 24 hrs"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>



    </LinearLayout>


    <!--        ...linearlayout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"

        android:orientation="horizontal">

        <!--        ...cardview-->
        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:background="@color/white"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"

            android:padding="0dp"

            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp">

            <!--        ...linearlayout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:padding="0dp"

                android:orientation="vertical">

                <!--        ...imageview-->
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"


                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="0dp"

                    android:src="@drawable/baseline_add_shopping_cart_24"/>

                <!--...textview-->
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:padding="0dp"
                    android:text="eShop"
                    android:textColor="@color/gray"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:background="@color/white"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"

            android:padding="0dp"

            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp">

            <!--        ...linearlayout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:padding="0dp"

                android:orientation="vertical">

                <!--        ...imageview-->
                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"


                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="0dp"
                    android:src="@drawable/smartphone"/>

                <!--...textview-->
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:padding="0dp"
                    android:text="Mobiles"
                    android:textColor="@color/gray"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:orientation="horizontal">

        <!--        ...cardview-->
        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:background="@color/white"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"

            android:padding="0dp"

            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp">

            <!--        ...linearlayout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:padding="0dp"

                android:orientation="vertical">

                <!--        ...imageview-->
                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"


                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="0dp"

                    android:src="@drawable/sports"/>

                <!--...textview-->
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:padding="0dp"
                    android:text="LifeStyle"
                    android:textColor="@color/gray"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card4"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:background="@color/white"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"

            android:padding="0dp"

            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp">

            <!--        ...linearlayout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:padding="0dp"

                android:orientation="vertical">

                <!--        ...imageview-->
                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"


                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="0dp"

                    android:src="@drawable/food"/>

                <!--...textview-->
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:padding="0dp"
                    android:text="Food
"
                    android:textColor="@color/gray"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <!--        ...cardview-->
        <androidx.cardview.widget.CardView
            android:id="@+id/card5"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:background="@color/white"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"

            android:padding="0dp"

            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp">

            <!--        ...linearlayout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:padding="0dp"

                android:orientation="vertical">

                <!--        ...imageview-->
                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"


                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="0dp"

                    android:src="@drawable/baby"/>

                <!--...textview-->
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:padding="0dp"
                    android:text="Baby And Kids"
                    android:textColor="@color/gray"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card6"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:background="@color/white"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"

            android:padding="0dp"

            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp">

            <!--        ...linearlayout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:padding="0dp"

                android:orientation="vertical">

                <!--        ...imageview-->
                <ImageView
                    android:id="@+id/image6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"


                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="0dp"

                    android:src="@drawable/health"/>

                <!--...textview-->
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:padding="0dp"
                    android:text="Health And Beauty"
                    android:textColor="@color/gray"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>