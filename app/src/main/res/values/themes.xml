<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="Base.Theme.NewZainBH" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light_green</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.NewZainBH" parent="Base.Theme.NewZainBH" />

    <style name="MyDatePickerDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/dark_blue_nav</item>
        <item name="colorPrimaryVariant">@color/dark_blue_nav</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
    </style>
    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <!-- Customize the color of the buttons for light mode -->
    <style name="MyDatePickerDialogStyle.Light" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/dark_blue_nav</item> <!-- Change to your desired color -->
    </style>

    <!-- Customize the color of the buttons for dark mode -->
    <style name="MyDatePickerDialogStyle.Dark" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/dark_blue_nav</item> <!-- Change to your desired color -->
    </style>
</resources>